<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>tthc</portlet-name>
		<icon>/images/icon/tthc_icon.png</icon>
		<configuration-action-class>com.portal_egov.portlet.tthc.action.TTHCViewConfiguration</configuration-action-class>
<!-- 		<indexer-class>com.portal_egov.portlet.tthc.util.TTHCIndexer</indexer-class> -->
		<instanceable>false</instanceable>
		<header-portlet-css>/css/tthc_view.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>tthc-portlet</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>tthc_category_management</portlet-name>
		<icon>/images/icon/tthc_category_portlet_icon.png</icon>
		<control-panel-entry-category>egov</control-panel-entry-category>
		<control-panel-entry-weight>4.0</control-panel-entry-weight>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/tthc_category_admin.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>tthc_category_admin-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	
	<portlet>
		<portlet-name>tthc_entry_management</portlet-name>
		<icon>/images/icon/tthc_icon.png</icon>
		<control-panel-entry-category>egov</control-panel-entry-category>
		<control-panel-entry-weight>3.0</control-panel-entry-weight>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/tthc_admin.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>tthc_admin-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	
	<portlet>
		<portlet-name>tthc_categories</portlet-name>
		<icon>/images/icon/tthc_category_portlet_icon.png</icon>
		<configuration-action-class>com.portal_egov.portlet.tthc.action.TTHCCategoriesConfig</configuration-action-class>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/tthc_view.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>tthc_categories-portlet</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>tthc_lastest_entries</portlet-name>
		<icon>/images/icon/tthc_icon.png</icon>
		<configuration-action-class>com.portal_egov.portlet.tthc.action.TTHCLastestEntriesConfig</configuration-action-class>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/tthc_view.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>tthc_lastest_entries-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>